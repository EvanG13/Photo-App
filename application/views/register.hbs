<form class="input-form" id="register-form" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
    <h2 id="registeration-title">Register</h2>

    <div class="register-content">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Enter Username" required autocomplete="off">

        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter Email" required>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Password" required autocomplete="off">

        <label for="confirm-password">Confirm Password</label>
        <input type="password" id="confirm-password" name="cofirmPassword" placeholder="Confirm Password" required autocomplete="off">
    </div>

    <div class="register-checkbox">
        <input type="checkbox" id="age" required>
        <label for="age">I am 13 years old or older</label>

        <input type="checkbox" id="tos-privacy" required>
        <label for="age">I accept the <a href="#">TOS</a> and <a href="#"> Privacy Rules</a></label>
    </div>

    <div class="register-button-section">
        <button type="submit" id="register-button">Register</button> 
    </div>

    <p id="login-divider">or</p>

    <div class="login-link">
        <label for="login">Already have an account?</label>
        <a href="/login">Log In</a> 
    </div>
</form>