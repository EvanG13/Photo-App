<form class="input-form" id="postimage-form" method="POST" enctype="multipart/form-data" action="/posts/create">

    <h2 id="post-title">Post Image</h2>

    <input type="file" id="image-input" name="uploadImage" accept="image/png, image/jpg, image/jpeg" required>

    <div class="post-text-input">
        <label for="title">Image Title</label>
        <input type="text" name="title" placeholder="Enter Picture Title" required>

        <label for="imt-description">Description</label>
        <textarea id="img-description" name="desc" placeholder="Enter Description" rows="4" cols="50" required></textarea>
    </div>
                
    <div class="image-policy">
        <input type="checkbox" required>
        <label for="img-policy">I accept <a href="#"> Use Policy</a> for uploading images</label>
    </div>

    <div class="submit-button-section">
        <button type="submit" id="submit-img-button">Submit Image</button>
    </div>
</form>